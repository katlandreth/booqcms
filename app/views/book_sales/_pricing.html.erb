<section class="book-pricing" id="scroll-link-1">
  <hgroup><h2>Purchase Options</h2></hgroup>

  <div class="book-pricing-content">
    <div class="book-option">
        <h3>
          <%= image_tag 'amazon-logo_black.png', class: 'pricing-file-image amazon' %>
          EPUB
        </h3>
        <span class="price"><sup class="dollar">$</sup>9.99</span>
        <ul>
          <li><em>Kindle</em> Optimised</li>
          <li><em>Instant</em> Download</li>
          <li><em>Same</em> Content as PDF</li>
          <li><em>30+</em> Practice Images</li>
          <li><em>GIMP 2.8</em> Compatible</li>
        </ul>
        <div class="pricing-button">
          <button>Purchase Now</button>
        </div>
    </div>

    <div class="book-option">
      <h3>
        <%= image_tag 'Adobe_PDF_file_icon_32x32.png', class: 'pricing-file-image pdf' %>
        PDF EBOOK
      </h3>
      <span class="price"><sup class="dollar">$</sup>9.99</span>
      <ul>
        <li><em>Desktop</em> Optimised</li>
        <li><em>Instant</em> Download</li>
        <li><em>300+</em> Pages</li>
        <li><em>30+</em> Practice Imges</li>
        <li><em>GIMP 2.8</em> Compatible</li>
      </ul>
      <div class="pricing-button">
        <button>Purchase Now</button>
      </div>
    </div>

    <div class="book-option">
      <h3>
        <%= image_tag 'paperback.png', class: 'pricing-file-image paperback' %>
        Paperback Book
      </h3>
      <span class="price"><sup class="dollar">Coming Soon</sup></span>
     <ul>
       <li><p>A printed paperback edition is in the works! Enter your email address below to get updates
        on its availability.</p>
      </li>
    </ul>
      <div class="email-form" style="margin:10px;">
        <!-- Begin MailChimp Signup Form -->
        <div id="mc_embed_signup">
        <form action="//how-to-gimp.us7.list-manage.com/subscribe/post?u=899fd0460f56466751b56aea7&amp;id=26e918e72d" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
          <div id="mc_embed_signup_scroll">
            <div class="mc-field-group">
            	<label for="mce-EMAIL">Email Address</label>
            	<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
            </div>
          	<div id="mce-responses" class="clear">
          		<div class="response" id="mce-error-response" style="display:none"></div>
          		<div class="response" id="mce-success-response" style="display:none"></div>
          	</div>
            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_899fd0460f56466751b56aea7_26e918e72d" tabindex="-1" value=""></div>
          </div>
          <span class="privacy-link"><%= link_to "We promise", privacy_policy_path %> not to spam you.</span>
          <div class="pricing-button">
            <div class="clear"><input type="submit" value="Submit Email" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
          </div>
        </form>
        </div>
        <!--End mc_embed_signup-->
        <!-- <label for="email">Email Address</label>
        <input type="email" name="email" id="email"/> -->
      </div>
    </div>
  </div>
</section>
