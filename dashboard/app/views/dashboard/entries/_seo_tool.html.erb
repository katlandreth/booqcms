<table>
  <thead>
   <tr>
     <th colspan="2">Word Count</th>
   </tr>
 </thead>
 <tbody>
   <tr>
     <td>Word count</td>
     <td><%= seo_analysis(@entry.payload).word_count %></td>
   </tr>
   <tr>
     <td>Sentence count</td>
     <td><%= seo_analysis(@entry.payload).sentence_count %></td>
   </tr>
 </tbody>
</table>

<table>
  <thead>
   <tr>
     <th colspan="3">Word Frequency</th>
   </tr>
   <tr>
     <th>word</th>
     <th>count</th>
     <th>density</th>
   </tr>
 </thead>
 <tbody>
   <% seo_analysis(@entry.payload).words.each do |w| %>
     <tr>
       <td class= "seo-word"><%= w.word %></td>
       <td><%= w.frequency %></td>
       <td><%= w.density %></td>
     </tr>
     <tr>
       <td><%= w.syllables%></td>
     </tr>
   <% end %>
 </tbody>
 <tfoot>
   <tr>
     <td clospan="3"><button type="button" class="clear-highlighting btn-small">clear highlighting</button></td>
   </tr>
 </tfoot>
</table>
