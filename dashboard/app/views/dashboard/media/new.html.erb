<section class="media-library">
  <div class="upload-form">
    <div class="uploaded-image"></div>
    <div class="upload-preview">
      <img />
    </div>
    <%= form_for(@upload, url: {controller: "media", action: "create", :format => :html}, remote: false, authenticity_token: true) do |f| %>
      <div>
        <%= f.label :file %><br>
        <%= f.file_field :file, class: "file" %>
      </div>
      <div>
        <%= f.submit %> <%= button_tag 'Cancel', type: 'reset', id: 'cancel-upload' %>
      </div>
    <% end %>
  </div>
</section>
