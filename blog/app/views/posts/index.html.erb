<%= render 'layouts/paralax' %>
<div class="featured-posts">
  <% @posts[0..2].each do |post| %>
  <div class="post-excerpt">
    <%= link_to path_to_post(post) do %>
      <div class="post-excerpt-title">
        <h2><%= post.title %></h2>
        <h3>A Subtitle</h3>
      </div>
      <div class="post-excerpt-image">
        <img src="http://brixton.premiumcoding.com/wp-content/uploads/2015/02/featured-image-1.jpg"/>
      </div>
    <% end %>
  </div>
  <% end %>
</div>
