<div class="sort_and_filter">
  <div class="input-group">
    <%= label_tag "post_type"  %>
    <div class="select">
      <%= select_tag("type", options_for_select(["All", "Video", "Written"], "All")) %>
      <div class="select__arrow"></div>
    </div>
  </div>
  <div class="input-group">
    <%= label_tag "category"  %>
    <div class="select">
      <%= select_tag("category", options_for_select(tag_filter,  "All")) %>
      <div class="select__arrow"></div>
    </div>
  </div>
  <div class="input-group">
    <%= label_tag "sort"  %>
    <div class="select">
      <%= select_tag("sort", options_for_select(["Newest First", "Videos First", "Written First", "Oldest First"], "Newest First")) %>
      <div class="select__arrow"></div>
    </div>
  </div>
</div>
